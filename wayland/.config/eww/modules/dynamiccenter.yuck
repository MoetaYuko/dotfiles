(defwidget dynamiccenter_widget []
  (box
    :orientation "v" :space-evenly false
    (box ; Module 1: Volume, Brightness
      :class "dynamic-module${((EWW_TIME - osd_vol <= 2) || (EWW_TIME - osd_bright <= 2)) ? '' : '-hidetop'}"
      ; :class "dynamic-module"
      (osd_widget)
    )
    (box ; Module 2: Workspaces
      :class "dynamic-module${((EWW_TIME - osd_vol <= 2) || (EWW_TIME - osd_bright <= 2)) ? '-hidebottom' : ''}"
      (workspaces_widget)
    )
  )
)
