set $disp1 DP-4
set $disp2 DP-2

output $disp1 position 0,0 scale 2
output $disp2 position 1920,0

workspace 1 output $disp1
workspace 2 output $disp1
workspace 3 output $disp1
workspace 4 output $disp1
workspace 5 output $disp1
workspace 6 output $disp1
workspace 7 output $disp1
workspace 8 output $disp2
workspace 9 output $disp2
workspace 10 output $disp2

#
# Xwayland HiDPI
#
# Need xorg-xwayland-lily wlroots-hidpi-xprop-git sway-im-git

exec xprop -root -format _XWAYLAND_GLOBAL_OUTPUT_SCALE 32c -set _XWAYLAND_GLOBAL_OUTPUT_SCALE 2
exec echo "Xft.dpi: 192" | xrdb -merge

# vim:ft=swayconfig
