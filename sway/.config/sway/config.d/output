output DP-1 position 0,0 scale 2
output DP-3 position 1920,0

#
# Xwayland HiDPI
#
# Need xorg-xwayland-lily wlroots-hidpi-xprop-git sway-im-git

exec xprop -root -format _XWAYLAND_GLOBAL_OUTPUT_SCALE 32c -set _XWAYLAND_GLOBAL_OUTPUT_SCALE 2
exec echo "Xft.dpi: 192" | xrdb -merge

# vim:ft=swayconfig
